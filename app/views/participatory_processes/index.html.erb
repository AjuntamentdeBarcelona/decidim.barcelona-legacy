<div class="row section">
  <h1 class="section-heading">Processos destacats</h1>
  <% @participatory_processes.each do |process| %>
    <article class="card card--full card--process">
      <div class="row collapse card--process__row">
        <div class="columns mediumlarge-8 large-6 card--process__column">
          <div class="card__content">
            <%= link_to participatory_process_path(process), class: "card__link" do %>
              <h2 class="card__title"><%= process.title %></h2>
            <% end %>
            <%= process.summary.html_safe %>
            <div><br /></div>
            <%= link_to t('.more_info'), participatory_process_path(process), class: "button secondary small hollow card__button" %>
          </div>
        </div>
        <div class="columns mediumlarge-4 large-6 card--process__column">
          <div class="card--full__image"
                style="background-image:url(<%= asset_url 'demo-info-page.jpg' %>)">
            <div class="card__content row collapse">
              <div class="large-6 large-offset-6 columns">
                <%= link_to participatory_process_path(process), class: "button expanded button--sc" do %>
                  <%= t('.join') %>
                  <% if process.active_step.present? %>
                    <span class="button__info"><%= t('.current_step', step_title: process.active_step.decorate.title) %></span>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
  <% end %>
</div>

<section class="section row collapse">
  <div class="row collapse order-by">
    <h2 class="order-by__text section-heading">27 procesos
      <span class="order-by__tabs">
        <a href="#" class="order-by__tab is-active">activos</a>
        <a href="#" class="order-by__tab">pasados</a>
        <a href="#" class="order-by__tab">futuros</a>
      </span>
    </h2>
    <div class="order-by__dropdown order-by__dropdown--right">
      <span class="order-by__text">Ordenar per:</span>
      <ul class="dropdown menu" data-dropdown-menu>
        <li>
          <a href="#">Más recientes</a>
          <ul class="menu">
            <li><a href="#">Más recientes</a></li>
            <li><a href="#">Fecha de finalización</a></li>
            <li><a href="#">Amb més suport</a></li>
            <li><a href="#">Més participades</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>



  <div class="row small-up-1 medium-up-2 large-up-3 card-grid">
    <% @participatory_processes.each do |process| %>
      <div class="column">
        <article class="card card--process">
          <div class="card__image-top"
                style="background-image:url(<%= asset_url 'demo-info-page.jpg' %>)"></div>
          <div class="card__content">
            <%= link_to participatory_process_path(process), class: "card__link" do %>
              <h4 class="card__title"><%= process.name %></h4>
            <% end %>
            <p class="card__desc">Implementar la instal·lació d’àrees estratègiques
              de càrrega i descàrrega per garantir uns fluxos de mobilitat
              sostenibles i respectuosos. Sed ullamcorper tellus erat, non
              ultrices sem tincidunt euismod. Fusce rhoncus porttitor velit.</p>
          </div>
          <div class="card__footer">
            <div class="card__support">
              <span class="card--process__small">Fase activa:
                <strong>Diagnóstico</strong>
              </span>
              <button class="card__button button small">
                Participa
              </button>
            </div>
          </div>
        </article>
      </div>
    <% end %>
  </div>
</section>
